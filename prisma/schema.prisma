generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  email     String    @unique
  name      String?
  password  String?
  role      String? @default("USER")
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
