generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid()) @db.Uuid
  email            String            @unique
  name             String?
  password         String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime?         @updatedAt
  role             UserRole          @default(USER)
  collectionPoints ColectionPoints[]
  DiscartTask      DiscartTask[]
}

model ColectionPoints {
  id              String    @id @default(uuid()) @db.Uuid
  name            String
  description     String
  latitude        String
  longitude       String
  city            String
  uf              String    @db.Char(2)
  address         String
  types           String[]
  operating_hours Json?
  contact         Json?
  validated       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @updatedAt
  userId          String    @db.Uuid
  user            User      @relation(fields: [userId], references: [id])
}

model DiscartTask {
  id              String    @id @default(uuid()) @db.Uuid
  name            String
  description     String
  latitude        String
  longitude       String
  city            String
  uf              String    @db.Char(2)
  address         String
  types           String[]
  operating_hours Json?
  contact         Json?
  validated       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @updatedAt
  userId          String    @db.Uuid
  user            User      @relation(fields: [userId], references: [id])
}

enum UserRole {
  USER
  ADMIN
}
